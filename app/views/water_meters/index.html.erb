<body>
<header class="jumbotron text-center">
  <h1>Показатели счетчиков воды</h1>
  <nav>
    <ul class="nav nav-pills justify-content-center">
      <li class="nav-item">
        <a href="#" class="nav-link">2016</a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link">2017</a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link">2018</a>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled active">2019</a>
      </li>
    </ul>
  </nav>
</header>

<main class="container">
  <div class="row">
    <div class="col-lg-8">
      <table class="table table-bordered">
        <thead>
        <tr>
          <th rowspan="2">Месяц</th>
          <th colspan="2" class = "title">Показатели воды</th>
        </tr>
        <tr>
          <th id="time">Холодная</th>
          <th>Горячая</th>
        </tr>
        </thead>
        <tbody>
        <% @water_meters.each do |water_meter| %>
          <tr>
            <th><%= water_meter.check_date %></th>
            <td><%= water_meter.hot %></td>
            <td><%= water_meter.cold %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <aside class="col-lg-4">
      <form>
        <fieldset class="form-group">
          <legend>Показатели воды</legend>
          <label class="mr-sm-2" for="cold">Холодная</label>
          <input type="" class="form-control" id="cold" name="cold">
          <label class="mr-sm-2" for="hot">Горячая</label>
          <input type="" class="form-control" id="hot" name="hot">
        </fieldset>

        <div class="form-group">
          <label for="date">Дата</label>
          <input type="date" class="form-control" id="date" name="date">
        </div>
        <button class="btn btn-outline-primary">Отправить</button>
      </form>
    </aside>
  </div>
</main>
</body>